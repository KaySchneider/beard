  body
    - var options = [{id: 'create', text: 'Create New', img: 'content/img/Windows 8.png'}, {id: 'open', text: 'Open Existing', img: 'content/img/Windows 8.png'}];
    div.container-fluid.metro
      for option in options
        a.tile.app(href='#', id='#{option.id}')
          div.image-wrapper
            img(src='#{option.img}')
          div.app-label #{option.text}
  script(type='text/javascript', src='../lib/jquery-1.8.2.js')
  script(type='text/javascript', src="scripts/jquery.mousewheel.js")
  script(type='text/javascript', src='scripts/bootstrap.min.js')
  script(type='text/javascript', src='scripts/bootmetro.js')
